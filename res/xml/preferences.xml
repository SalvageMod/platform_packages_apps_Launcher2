<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- General settings -->
    <PreferenceCategory 
	android:key="launcher_general_category"
        android:title="@string/launcher_general_settings">
    </PreferenceCategory>

    <CheckBoxPreference android:key="systemPersistent"
      android:title="@string/pref_title_system_persistent"
      android:summary="@string/pref_summary_system_persistent"
      android:defaultValue="@bool/config_system_persistent" />

    <PreferenceCategory 
	android:title="@string/ui_launcher_settings">

    <CheckBoxPreference android:key="pref_key_launcher_fullscreen"
       android:title="@string/pref_title_launcher_fullscreen"
       android:summary="@string/pref_summary_launcher_fullscreen"
       android:defaultValue="false" />

    </PreferenceCategory>

    <PreferenceCategory 
        android:title="@string/pref_icon_settings">
 
    <CheckBoxPreference android:key="pref_key_launcher_hide_labels"
       android:title="@string/pref_title_hide_labels"
       android:summary="@string/pref_summary_hide_labels"
       android:defaultValue="false" />

     </PreferenceCategory>

</PreferenceScreen>
